<!DOCTYPE html>
<html>
  <head>
    <title>Ezapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= vite_client_tag %>
    <%= vite_javascript_tag "application" %>
    <%= vite_stylesheet_tag "conversations" %>
  </head>

  <body>
    <nav class="nav mx-auto" style="width: fit-content;">
      <% if user_signed_in? %>
        <%= link_to "Home", root_path, class: "nav-link" %>
        <%= link_to "Messages", conversations_path, class: "nav-link" %>
        <%= button_to "Log out", logout_path, method: :delete, class: "border-0 nav-link bg-white" %>
      <% else %>
        <%= link_to "Log in", login_path, class: "nav-link" %>
      <% end %>
    </nav>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
