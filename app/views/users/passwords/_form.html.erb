<%= form_with(id: "change_password_form", model: password, url: update_user_password_path, method: :patch) do |form| %>
  <div>
    <%= form.label :current_password %>
    <%= form.password_field :current_password %>
    <%= field_errors(form.object, :current_password) %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= field_errors(form.object, :password) %>
  </div>

  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
    <%= field_errors(form.object, :password_confirmation) %>
  </div>
  <%= form.submit "Change password" %>
<% end %>