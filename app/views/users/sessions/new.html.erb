<h1> Log in</h1>

<%= render "shared/flash_message" %>

<%= form_with(url: login_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%= form.submit "Log in" %>
<% end %>

<p>Don't have an account yet? <%= link_to "Sign up", sign_up_url %></p>
