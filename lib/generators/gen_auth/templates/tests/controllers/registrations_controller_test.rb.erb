require "test_helper"

class <%= class_name.pluralize %>::RegistrationsControllerTest < ActionDispatch::IntegrationTest
  test "#new doesn't crash" do
    get <%= plural_name %>_sign_up_url
    assert_response :success
  end

  test "#create persists a new <%= singular_name %> and redirects to login page" do
    assert_difference "<%= class_name %>.count" do
      post <%= plural_name %>_sign_up_url, params: {
        <%= singular_name %>: {email: "nobody@example.com", password: "it's m3?", password_confirmation: "it's m3?"}
      }
    end
    perform_enqueued_jobs
    assert_emails 1

    assert_redirected_to <%= plural_name %>_login_url
  end

  test "#create responds with :unprocessable_entity when invalid" do
    assert_no_difference "<%= class_name %>.count" do
      post <%= plural_name %>_sign_up_url, params: {
        <%= singular_name %>: {email: "nobody@example.com", password: "it's m3?", password_confirmation: "doesn't match"}
      }
    end
    assert_response :unprocessable_entity
  end
end