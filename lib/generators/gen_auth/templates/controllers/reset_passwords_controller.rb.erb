module <%= class_name.pluralize %>
  class ResetPasswordsController < ApplicationController
    skip_before_action :require_<%= singular_name %>_authentication!
    before_action :redirect_if_already_authenticated!
    before_action :find_<%= singular_name %>_by_reset_password_token, only: [:edit, :update]

    def new
    end

    def create
      if <%= singular_name %> = <%= class_name %>.confirmed.find_by(email: params[:email])
        <%= singular_name %>_token = <%= class_name %>Token.create_reset_password_token!(<%= singular_name %>)
        <%= class_name %>Mailer.with(<%= singular_name %>: <%= singular_name %>, token: <%= singular_name %>_token.encoded_token).reset_password.deliver_later
      end

      flash[:notice] = "If your email address exists in our database, you will receive an email with instructions on how to reset your password in a few minutes."
      redirect_to <%= plural_name %>_login_url
    end

    def edit
    end

    def update
      if @<%= singular_name %>.update(password_params)
        @<%= singular_name %>.tokens.delete_all
        flash[:notice] = "Successfully reset your password!"
        redirect_to <%= plural_name %>_login_url
      else
        render :edit, status: :unprocessable_entity
      end
    end

    private

    def find_<%= singular_name %>_by_reset_password_token
      @token = params[:token]

      if @token.present? && !(@<%= singular_name %> = <%= class_name %>Token.find_<%= singular_name %>_by_reset_password_token(@token))
        flash[:alert] = "The link might have expired or is invalid."
        redirect_to <%= plural_name %>_login_url
      end
    end

    def password_params
      params.require(:<%= singular_name %>).permit(:password, :password_confirmation)
    end
  end
end
